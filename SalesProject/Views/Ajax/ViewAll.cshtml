@model IEnumerable<SalesProject.Models.ProductA>
@{
    ViewData["Title"] = "ViewAll";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="responsive-table" id="productTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Image
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <img src="~/ImagesA/" @item.ImagePath height="80" width="70" />
            </td>
            <td>
                <a class="waves-effect waves-light btn" onclick="Edit('@Url.Action("AddOrEdit", "Ajax", new { id=@item.ProductID})')">Edit</a>
                <a class="waves-effect waves-light btn" onclick="Delete('@Url.Action("Delete", "Ajax", new { id=@item.ProductID})')">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
